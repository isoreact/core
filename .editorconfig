root = true

[*]
end_of_line = LF
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.html]
indent_size = 4

[*.html.twig]
indent_size = 4

[*.json]
indent_style = tab
indent_size = 4
insert_final_newline = false

[package.json]
indent_style = space
indent_size = 2

[.yml]
indent_style = space
indent_size = 2
